{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "types": ["@cloudflare/workers-types"],
    "paths": {
      "components/*": ["./components/*"],
      "app/*": ["./app/*"],
      "lib/*": ["./lib/*"],
      "utils/*": ["./utils/*"],
      "hooks/*": ["./hooks/*"],
      "scripts/*": ["./scripts/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "scripts/crons/index.ts"
  ],
  "exclude": ["node_modules"]
}
